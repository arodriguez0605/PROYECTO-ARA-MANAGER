  <!-- Modal de imagenes-->
  <div class="modal fade" id="modalImagenes" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header bg-gradient-primary">
          <h5 class="card-title text-uppercase  mb-0" style="color: white">Subir imagen </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <!--body modal-->
        <div class="card bg-secondary shadow">
          <div class="card-header bg-transparent pb-5">
            <form action='/subirImagen' method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <div class="input-group input-group-alternative mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text"></span>
                  </div>
                  <input class="form-control" placeholder="Nombre del archivo" type="text" name="nombreArchivo"
                    id="nombreArchivo" required>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group input-group-alternative mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text"></span>
                  </div>
                  <input class="form-control" placeholder="Descripción" type="text" id="descripcionArchivo"
                    name="descripcionArchivo" required>

                </div>
              </div>
              <div class="input-group mb-3">
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="cargarImagen" name="cargarImagen" accept="image/*"
                    required>
                  <label class="custom-file-label"><i class="fas fa-arrow-circle-up"></i> Cargar imagen</label>
                </div>
              </div>
              <div class="text-center">
                <input type="submit" class="btn btn-warning my-4" value="Cargar Multimedia">
                <label for="file-upload" class="subir">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

