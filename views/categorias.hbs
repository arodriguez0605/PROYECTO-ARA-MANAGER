<title>
  Categorías - Ara Manager
</title>
{{> head}}

<body class="">

  {{> navbar}}

  <!-- Nueva entrada y búsqueda -->
  <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    <div class="container-fluid">
      <div class="header-body">
        <!-- Card stats -->
        <div class="row">
          <div class="col-xl-6 col-lg-6">
            <div class="card card-stats mb-4 mb-xl-0">
              <div class="card-body">
                <div class="row">
                  <div class="col">
                    <h5 class="card-title text-uppercase text-muted mb-0">Agregar</h5>
                    <span class="h2 font-weight-bold mb-0">Nueva categoría</span>
                  </div>
                  <div class="col-auto">
                    <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                      <i class="fas fa-plus"></i>
                    </div>
                  </div>
                </div>
                <p class="mt-3 mb-0 text-muted text-sm">
                  <button class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter">Crear</button>
                </p>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid mt--7">
    <!-- Table -->
    <div class="row">
      <div class="col">
        <div class="card shadow">
          <div class="card-header border-0">
            <h3 class="mb-0">Categorías</h3>
          </div>
          <div class="table-responsive">
            <table class="table align-items-center table-flush">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Nombre</th>
                  <th scope="col">Descripción</th>
                  <th scope="col">Creador</th>
                  <th scope="col">Fecha creación</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <!--Entradas-->
                {{#each categoria}}
                <tr>
                  <th scope="row">
                    <div class="media align-items-center">
                      <!--    <a href="#" class="avatar rounded-circle mr-3">
                          <img alt="Image placeholder" src="../assets/img/theme/bootstrap.jpg">
                        </a>-->
                      <div class="media-body">
                        <span class="mb-0 text-sm"> {{ nombre }} </span>
                      </div>
                    </div>
                  </th>
                  <td>
                    {{ descripcion }}
                  </td>

                  <td>
                    <div class="avatar-group">
                      <a href="#" class="avatar avatar-sm" data-toggle="tooltip"
                        data-original-title="{{autor.name}}">
                        <img alt="Image placeholder" src="..{{autor.imagen}}" class="rounded-circle">
                      </a>
                    </div>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      {{ fechaCreacion }}
                    </div>
          </div>
          </td>

          <td class="text-right">
            <div class="dropdown">
              <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
              </a>

              <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                <a class="dropdown-item" data-toggle="modal" data-target="#verModalCenter" href="#"
                  onclick="verCategoria('{{ _id }}')">Ver</a>
                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#modalEditar"
                  onclick="verFormActualizar('{{ _id }}')">Editar</a>
                <a class="dropdown-item" href="#" onclick="eliminarCategoria('{{ _id }}')">Eliminar</a>
              </div>
            </div>
          </td>
          </tr>

          {{/each}}
          </tbody>
          </table>
        </div>

        <div class="card-footer py-4">
          <nav aria-label="...">
            <ul class="pagination justify-content-end mb-0">
              <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">
                  <i class="fas fa-angle-left "></i>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              <li class="page-item active">
                <a class="page-link" href="#">1</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
              </li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item">
                <a class="page-link" href="#">
                  <i class="fas fa-angle-right"></i>
                  <span class="sr-only">Next</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>

      <!-- Modal de categorías-->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
              <h5 class="card-title text-uppercase  mb-0" style="color: white">Crear categoría</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <!--body modal-->
            <div class="card bg-secondary shadow">
              <div class="card-header bg-transparent pb-5">
                <form role="form" action='/crearCategoria' method="POST" enctype="multipart/form-data">
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                      </div>
                      <input class="form-control" placeholder="Nombre de la categoría" type="text"
                        name="nombreCategoria" id="nombreCategoria" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                      </div>
                      <input class="form-control" placeholder="Descripción" type="text" name="descripcionCategoria"
                        id="descripcionCategoria" required>
                    </div>
                  </div>
                  <div class="input-group mb-3">
                    <div class="input-group mb-3">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id="cargarImagen" name="cargarImagen" required>
                        <label class="custom-file-label"><i class="fas fa-arrow-circle-up"></i> Cargar imagen</label>
                      </div>
                    </div>
                  </div>


                  <div class="text-center">
                    <input type="submit" class="btn btn-warning my-4" value="Crear Categoría">

                    <label for="file-upload" class="subir">

                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal de ver categorias-->
      <div class="modal fade" id="verModalCenter" tabindex="-1" role="dialog" aria-labelledby="verModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
              <h5 class="card-title text-uppercase  mb-0" style="color: white">Ver categoría</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <!--body modal-->
            <div class="card bg-secondary shadow" id="imagenCategoria">
              <div class="card-header bg-transparent pb-5" >
              </div>
            </div>
            <div class="card bg-secondary shadow" id="imagenCategoria1">
              <div class="card-header bg-transparent pb-5" >
              </div>
            </div>  
            <div class="card bg-secondary shadow">
              <div class="card-header bg-transparent pb-5">
                <div id="imagenCategoria2"></div>
              </div>
            </div>                                                
          </div>
        </div>
      </div>

      <!-- Modal de editar categorias-->
      <div class="modal fade" id="modalEditar" tabindex="-1" role="dialog"
        aria-labelledby="modalEditarTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
              <h5 class="card-title text-uppercase  mb-0" style="color: white">Crear categoría</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <!--body modal-->
            <div class="card bg-secondary shadow">
              <div class="card-header bg-transparent pb-5">
                <form role="form" action='/actualizarCategoria' method="POST" enctype="multipart/form-data">
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                      </div>
                      <div id='inputNombreCategoria'>
                      </div>
                      
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                      </div>
                      <div id='inputDescripcionCategoria'>
                      </div>
                      
                    </div>
                  </div>
                  <div class="input-group mb-3">
                    <div class="input-group mb-3">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id="cargarImagen" name="cargarImagen" required>
                        <label class="custom-file-label"><i class="fas fa-arrow-circle-up"></i> Cargar imagen</label>
                      </div>
                    </div>
                  </div>


                  <div class="text-center">
                    <input type="submit" class="btn btn-warning my-4" value="Crear Categoría">

                    <label for="file-upload" class="subir">

                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      {{> footer}}

      <script src="../assets/js/controlador-categoria.js"></script>