<title>
  Multimedia - Ara Manager
</title>
{{> head}}

<body class="">
  {{> navbar}}

  <!-- Nueva entrada y búsqueda -->
  <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    <div class="container-fluid">
      <div class="header-body">
        <!-- Card stats -->
        <div class="row">
          <div class="col-md-12 col-lg-6">
            <div class="card card-stats mb-4 mb-xl-0">
              <div class="card-body">
                <div class="row">
                  <div class="col">
                    <h5 class="card-title text-uppercase text-muted mb-0">Crear nueva plantilla </h5>
                    <span class="h2 font-weight-bold mb-0">
                      Utiliza el editor para crear una nueva plantilla para utilizar en multiples paginas.
                    </span>
                  </div>

                  <div class="col-auto">
                    <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                      <i class="far fa-file"></i>
                    </div>
                  </div>
                </div>

                <p class="mt-3 mb-0 text-muted text-sm">
                  <button class="btn btn-warning" data-toggle="modal" data-target="#modalCrearPlantilla">
                    Crear Plantilla
                  </button>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid mt--7">
    <!-- Plantillas -->
    <div class="row mb-4">
      <div class="col">
        <div class="card shadow">
          <div class="card-header" style="background-color: rgb(82,190,196)">
            <h3 class="mb-0 text-white">Plantillas disponibles </h3>
          </div>

          <div class="card-body">
            <div class="row icon-examples">
              {{#each plantillas}}
              <div class="col-lg-3 col-md-6">
                <div>
                  <a href="{{url}}" data-lightbox="bancoImagen" style='text-decoration:none;color:black;'>
                    <button type="button" class="btn-icon-clipboard" title="Abrir imagen">
                      <img src="../data/archivosSubidos/plantillas/plantillaDefault.jpg" style="width: 50px">
                      <span>
                        <strong>{{titulo}}</strong><br>
                      </span>
                    </button>
                  </a>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal para crear plantilla -->
    <div class="modal fade" id="modalCrearPlantilla" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header bg-gradient-primary">
            <h5 class="card-title text-uppercase  mb-0" style="color: white"> Crear nueva plantilla </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <!--body modal-->
          <div class="card bg-secondary shadow">
            <div class="card-header bg-transparent pb-5">
              <form action='/subirPlantilla' method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <div class="input-group input-group-alternative mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Titulo del tema" type="text" name="tituloPlantilla"
                      id="tituloPlantilla" required>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-alternative mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Descripción" type="text" id="descripcionPlantilla"
                      name="descripcionPlantilla" required>
                  </div>
                </div>
                <div class="input-group mb-3">
                  <div class="custom-file">
                    <input type="file" class="custom-file-input" id="imagenesPlantilla" name="imagenesPlantilla"
                      accept="image/*" {{!-- multiple --}} required>
                    <label class="custom-file-label"><i class="fas fa-arrow-circle-up"></i> Seleccionar imagenes...
                    </label>
                  </div>
                </div>
                <div class="text-center">
                  <input type="submit" class="btn btn-warning my-4" value="Crear plantilla">
                  <label for="file-upload" class="subir">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{> footer}}